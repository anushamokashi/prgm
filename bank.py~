def user_name():
    name=raw_input("enter the name here")


def __init__(self):
    self.balance=0


def user_deposit(self,amount,balance):
    self.balance +=amount
    return self.balance

def user_withdraw(self,amount,balance):
    self.balance-=amount
    return self.balance


func()
     
